<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#9E9E9E"
                android:endColor="#989898"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#F2F2F2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#F0F0F0"
                android:startColor="#EAEAEA"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#F2F2F2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <item android:state_enabled="false" >
        <shape>
        <gradient
            android:endColor="#E0E0E0"
            android:startColor="#DADADA"
            android:angle="270" />
        <stroke
            android:width="3dp"
            android:color="#F2F2F2" />
        <corners
            android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#6E6E6E"
                android:startColor="#686868"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#F2F2F2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>